          }
        ]
      },
      {
        "tab": "Features",
        "groups": [
          {
            "group": "Core Features",
            "pages": [
              "features/dashboard",
              "features/calendar",
              "features/setups",
              "features/tags-and-categories",
              "features/risk-reward"
            ]
          },
          {
            "group": "Analysis",
            "pages": [
              "features/setup-analysis",
              "features/tag-analysis",
              "features/time-of-day-analysis"
